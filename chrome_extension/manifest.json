{
  "manifest_version": 3,
  "name": "DeepSecure Realtime",
  "description": "Real-time deepfake detection for videos on web pages (mock results).",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "DeepFake Detector"
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://*.tiktok.com/*"],
      "js": ["content.js"]
    }
  ]
}
